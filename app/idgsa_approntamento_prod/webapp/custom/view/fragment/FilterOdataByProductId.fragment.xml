<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ResponsivePopover
		title="{i18n>filterOdataByProductId}"
		class="sapUiPopupWithPadding"
		placement="Bottom" >
		<beginButton>
			<Button text="{i18n>cancel}" press="handleCancelButtonOnOdataFilter" />
		</beginButton>
		<endButton>
			<Button text="{i18n>ok}" press="handleOkButtonOnOdataFilter" />
		</endButton>
		<content>
			<Input id="odataProductIdInput" value="" width="15em" />
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>